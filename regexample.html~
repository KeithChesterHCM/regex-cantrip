<html>
  <head>
    <title>RegEx Demo</title>
  </head>
  <body>
    <h2>RegEx Demo</h2>
    <script>
      function validateForm(form) {
        var email = form.email.value;
        var emailAgain = form.emailAgain.value;
        if(email != emailAgain) {
          alert("emails do not match!");
          return false;
        } 
        document.getElementById('success_div').style.display = 'block';
        return false;
      }
      
      function clearMe() {
        document.getElementById('success_div').style.display = 'none';
        return false;
      }
    </script>
    <form name='demoform' method='get' action='#'>
      <table>
        <tr>
          <td>
            <label>Enter your email: </label>
          </td>
          <td>
            <input name='email' type='text' placeholder='email' />
          </td>
        <tr>
        <tr>
          <td>
            <label>Enter your email again: </label>
          </td>
          <td>
            <input name='emailAgain' type='text' placeholder='email (again)' />
          </td>
        </tr>
        <tr>
          <td colspan='2' align='right'>
            <input type='submit' value='Submit' onclick='return validateForm(this.form);' />
          </td>
        <tr>
      </table>
    </form>
    <br /><br />
    <div id='success_div' style='color:red; display:none;'>
      <h2>Email validated!</h2><br />
      <a href='#' onclick='return clearMe();'>Clear this message.</a>
    </div>
  </body>
</html>
